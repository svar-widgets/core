{
	"private": true,
	"name": "wx-core",
	"workspaces": [
		"locales",
		"svelte",
		"site"
	],
	"scripts": {
		"prepare": "husky",
		"build": "cd svelte && yarn build",
		"build:deps": "true",
		"build:tests": "cd svelte && yarn build:tests",
		"start": "cd svelte && yarn start",
		"start:tests": "cd svelte && yarn start:tests",
		"lint": "yarn eslint ./svelte/src ./svelte/demos ./locales",
		"test": "true",
		"test:cypress": "cd svelte && yarn test:cypress"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "4.0.0",
		"autoprefixer": "10.4.20",
		"cypress": "13.6.4",
		"eslint": "9.14.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-cypress": "4.1.0",
		"eslint-plugin-svelte": "2.46.0",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.47",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "3.2.7",
		"rollup-plugin-visualizer": "5.12.0",
		"svelte": "5.1.9",
		"svelte-spa-router": "4.0.1",
		"vite": "5.4.10"
	},
	"lint-staged": {
		"*.{ts,js,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,md,json}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"eslint-plugin-vitest": "^0.5.4",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0"
	}
}
